<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueShade1"
    tools:context=".CourseDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivCourseImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/course_hero_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvCourseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivCourseImage"
            android:paddingHorizontal="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Course Title" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCourseTitle"
            android:padding="15dp"
            android:textColor="@color/white"
            tools:text="$25" />

        <TextView
            android:id="@+id/tvSuitedFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCourseTitle"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            android:textColor="@color/white"
            tools:text="Beginner" />

        <TextView
            android:id="@+id/tvCourseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrice"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCourseDescription"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background"
                android:text="@string/edit_course"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDeleteCourse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background"
                android:text="@string/delete_course"
                android:textAllCaps="false" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>